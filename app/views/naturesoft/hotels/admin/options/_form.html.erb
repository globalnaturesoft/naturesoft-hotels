<div class="panel panel-flat">
    <div class="panel-body">
        <%= form_for([naturesoft, :admin, Naturesoft::Option.new], html: {}) do |f| %>
            <div class="row">
                <div class="col-md-3"><h4 class="text-semibold">Thumbnail (Hotels) <span class="text-muted small">Code</span></div>
                <div class="col-md-2"><br>Width</div>
                <div class="col-md-2"><br>Height</div>
                <div class="col-md-3"><br>Scale</div>
                <div class="col-md-2"></div>
            </div>
            
            <div class="addable-form" data-sample="thumbnail-size-form">
                <div class="addable-container">
                    <% @options["hotels"]["thumbnails"].each_with_index do |size, index| %>
                        <%= render 'naturesoft/hotels/admin/options/thumbnail_size', size: size[1], index: index %>
                    <% end %>
                </div>
                <a href="#add" class="btn btn-info addable-add">Add new size</a>
            </div>
            
            <hr>
            
            <div class="row">
                <div class="col-md-3"><h4 class="text-semibold">Thumbnail (Events) <span class="text-muted small">Code</span></div>
                <div class="col-md-2"><br>Width</div>
                <div class="col-md-2"><br>Height</div>
                <div class="col-md-3"><br>Scale</div>
                <div class="col-md-2"></div>
            </div>
            
            <div class="addable-form" data-sample="event-thumbnail-size-form">
                <div class="addable-container">
                    <% @options["hotels"]["event_thumbnails"].each_with_index do |size, index| %>
                        <%= render 'naturesoft/hotels/admin/options/event_thumbnail_size', size: size[1], index: index %>
                    <% end %>
                </div>
                <a href="#add" class="btn btn-info addable-add">Add new size</a>
            </div>
            
            <hr>
            
            <h4 class="text-semibold">Listing</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" ><%= t(:hotels_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][hotels_items_per_page]", @options["hotels"]["hotels_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:rooms_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][rooms_items_per_page]", @options["hotels"]["rooms_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:facilities_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][facilities_items_per_page]", @options["hotels"]["facilities_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" ><%= t(:services_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][services_items_per_page]", @options["hotels"]["services_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:bed_types_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][bed_types_items_per_page]", @options["hotels"]["bed_types_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:room_types_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][room_types_items_per_page]", @options["hotels"]["room_types_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" ><%= t(:events_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][events_items_per_page]", @options["hotels"]["events_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:event_categories_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][event_categories_items_per_page]", @options["hotels"]["event_categories_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" ><%= t(:labels_items_per_page) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][labels_items_per_page]", @options["hotels"]["labels_items_per_page"], class: "form-control number_input" %>
                        </div>
                    </div>
                </div>
            </div>
          
            <hr>
            
            <h4 class="text-semibold">Quick Booking Order <span class="text-muted small">Code</span></h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" ><%= t(:announce_email) %> <span class='text-danger'>*</span></label>
                        <div class="">
                            <%= text_field_tag "options[hotels][quick_order_announce_email]", @options["hotels"]["quick_order_announce_email"], class: "form-control", placeholder: "Enter email to receive notification..." %>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-right">
                <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
                <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_hotels.admin_hotels_path, class: "btn btn-danger"%>
            </div>
            
        <% end %>
    </div>
</div>
  
<!-- thumbnail size sample form -->
<div class="thumbnail-size-form hide">
    <%= render 'naturesoft/hotels/admin/options/thumbnail_size', size: {}, index: "<<index>>" %>
</div>
<div class="event-thumbnail-size-form hide">
    <%= render 'naturesoft/hotels/admin/options/event_thumbnail_size', size: {}, index: "<<index>>" %>
</div>
<!--/thumbnail size sample form -->
