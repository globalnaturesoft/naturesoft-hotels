<% title t(:events) %>

<div class="page_actions">
    <%= link_to "#{t(:new_event)} <i class=\"icon-plus22 position-right\"></i>".html_safe, naturesoft_hotels.new_backend_event_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form sortable" sort-url="<%= naturesoft.backend_custom_sort_path(class: "Naturesoft::Hotels::Event") %>">
    
    <div class="panel panel-flat border-top-primary">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Hotels::Event.sort_by, :selected => params[:sort_by]), class: "select2", "sort-cond": "naturesoft_hotels_events.custom_order") %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label><%= t(:sort_orders) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Hotels::Event.sort_orders, :selected => params[:sort_orders]), class: "select2", "sort-cond": "asc") %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:keyword] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
            
    <div class="btn-group list_actions mb-10 hide">
        <button type="button" class="btn btn-xs btn-info dropdown-toggle" data-toggle="dropdown">
            Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">											
            <li>
                <a href="" data-href="<%= naturesoft_hotels.delete_backend_events_path %>" data-confirm="Are you sure!" data-method="DELETE">
                    <i class="icon-enter"></i> Delete
                </a>
            </li>            
        </ul>
    </div>
                
    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="bg-teal-800">
                        <th width="1%" class="check_all_list">
                            <input type="checkbox" class="styled">
                        </th>
                        <th><%= t(:image) %></th>
                        <th><%= t(:title) %></th>
                        <th class="text-center"><%= t(:creator) %></th>
                        <th><%= t(:created_at) %></th>
                        <th><%= t(:status) %></th>
                        <th class="text-right"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @events.each do |item| %>
                        <tr<% if item.status == "active" %> class="success"<% else %> class="warning"<% end %>>
                            <td width="1%" class="text-nowrap">
                                <input type="checkbox" class="node styled"
                                    name="ids[]"
                                    value="<%= item.id %>"
                                />
                                <input type="hidden"
                                  name="custom_order"
                                  value="<%= item.custom_order %>"
                                />
                            </td>
                            <td><%= link_to image_tag(image_src(item.image), size: "70x70", class: "img-rounded img-preview"), naturesoft_hotels.edit_backend_event_path(item) %></td>
                            <td class="kq_search">
                              <strong><%= link_to truncate(item.title, lenght: 100), naturesoft_hotels.edit_backend_event_path(item) %></strong>
                            </td>
                            <td class="text-center"><%= user_box(item.user) %></td>
                            <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
                            <td><%= display_status(item.status) %></td>
                            <td class="text-right">
                              <div class="btn-group">
                                <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_hotels.edit_backend_event_path(item), class: "btn bg-teal btn-icon btn-xs", title: item.title %>
                                <button type="button" class="btn bg-teal dropdown-toggle btn-xs" data-toggle="dropdown"><span class="caret"></span></button>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <% if item.status == "active" %>
                                    <li>
                                        <%= link_to '<i class="icon-lock4"></i> '.html_safe + t(:inactive), naturesoft_hotels.disable_backend_events_path(id: item.id), method: :put %>
                                    </li>
                                    <% end %>
                                    <% if item.status == "inactive" %>
                                    <li>
                                        <%= link_to '<i class="icon-unlocked"></i> '.html_safe + t(:active), naturesoft_hotels.enable_backend_events_path(id: item.id), method: :put %>
                                    </li>
                                    <% end %>
                                    <li>
                                        <%= link_to '<i class="icon-cross2"></i> '.html_safe + t(:delete), naturesoft_hotels.backend_event_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
                                    </li>
                                  </ul>
                                </div>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="dataTables_wrapper no-footer">
                <div class="datatable-footer showed">
                    <div class="dataTables_info" ><%= page_entries_info @events %></div>
                    <div class="dataTables_paginate paging_simple_numbers">
                        <%= will_paginate @events, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /basic datatable -->