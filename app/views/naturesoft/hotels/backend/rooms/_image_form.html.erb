<%= hidden_field_tag "room[room_images_attributes]["+index.to_s+"][id]", item.id %>
<div class="row addable-row" data-index="<%= index %>">
  <div class="col-md-10">
    <div class="form-group">
      <label class="col-md-3 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
      <div class="media no-margin-top col-md-9">
        <div class="media-left">
          <img src="<%= image_src(item.image.system) %>" style="width: 50px; height: auto; border-radius: 2px;" alt="">
        </div>
  
        <div class="media-body">
          <input type="file" name="room[room_images_attributes][<%= index %>][image]" class="">
          <span class="help-block">Accepted formats: gif, png, jpg.</span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-1 hide">
    <div class="form-group">
      <div><%= t(:remove) %> </div>
      <div class="">
        <input type="checkbox" value="true" class="checkbox delete" name="room[room_images_attributes][<%= index %>][_destroy]" />
      </div>
    </div>
  </div>
  <div class="col-md-1">
    <a href="#add" class="btn btn-danger addable-nested-remove"><i class="icon-cross2"></i></a>
  </div>
  <hr style="clear: both" />
</div>