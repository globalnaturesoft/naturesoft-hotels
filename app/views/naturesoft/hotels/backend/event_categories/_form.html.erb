<div class="panel panel-flat">
  
  <div class="panel-body">

    <%= form_for([naturesoft_hotels, :backend, event_category], html: {class: "form-horizontal validate"}) do |f| %>
        
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-10">
                <%= f.text_field :name, class: "form-control required" %>
            </div>
        </div>
            
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
            <div class="col-md-10">
                <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
            </div>
        </div>
            
        <div class="form-group">
          <label class="col-md-2 control-label" ><%= t(:parent_category) %></label>
            <div class="col-md-10">
                <%= select_tag("event_category[parent_id]",
                  nil,
                  {
                    class: "select2-ajax",
                    "data-url": select2_backend_event_categories_path,
                    "data-excluded": event_category.id,
                    "value": event_category.parent.present? ? event_category.parent.id : "",
                    "text": event_category.parent.present? ? event_category.parent.name : ""
                  }
              ) %>
            </div>
        </div>
    
        <div class="text-right">
          <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
        </div>
        
    <% end %>
  </div>
</div>