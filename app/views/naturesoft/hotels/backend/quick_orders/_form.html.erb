<%= form_for([naturesoft_hotels, :backend, quick_order], html: {class: "form-horizontal validate"}) do |f| %>
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12 control-label" ><%= t(:first_name) %> <span class='text-danger'>*</span></label>
                <div class="col-md-12">
                    <%= f.text_field :first_name, class: "form-control required" %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12 control-label" ><%= t(:last_name) %> <span class='text-danger'>*</span></label>
                <div class="col-md-12">
                    <%= f.text_field :last_name, class: "form-control required" %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12 control-label" ><%= t(:email) %> <span class='text-danger'>*</span></label>
                <div class="col-md-12">
                    <%= f.text_field :email, class: "form-control required" %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12 control-label" ><%= t(:phone) %> <span class='text-danger'>*</span></label>
                <div class="col-md-12">
                    <%= f.text_field :phone, class: "form-control required" %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-12 control-label" ><%= t(:message) %></label>
                <div class="col-md-12">
                    <%= f.text_area :message, rows: "5", cols: "5", class: "form-control" %>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
    </div>
    
<% end %>